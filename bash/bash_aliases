# set up aliases
# --------------
# for command line
alias ls="ls -G"
alias cdls='cd $1 && ls'

# Location aliases
alias h="cd ~" # There's no place like home...
alias pow="cd ~/.pow && ln -s" # For setting up pow (rack dev server)
alias uif="cd /Users/lheimann/Projects/uifcostumes"
alias thalia="cd /Users/lheimann/Projects/thalia"
alias pats="cd /Users/lheimann/67-272-S12/class_projects/PATS_67272"
alias labs="cd /Users/lheimann/67-272-S12/labs_2012"
alias creamery="cd /Users/lheimann/67-272-S12/project_2012/creamery_2012"
alias arbeit="cd /Users/lheimann/67-272-S11/arbeit"
alias 67272="cd /Users/lheimann/Sites/67272_rebuild"
alias advising="cd /Users/lheimann/67-272-S11/advising"
alias quiz="cd /Users/lheimann/Projects/acacquiz"
alias ft="cd /Users/lheimann/Projects/FT2011"

